<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="mainMsg://graphs"
        messagesPack="com.company.helthdiary.web"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd">
    <data readOnly="true">
        <collection id="pulsesDc"
                    class="com.company.helthdiary.entity.patient.Pulse">
            <view extends="_local">
                <property name="patient" view="_minimal">
                    <property name="user" view="_minimal"/>
                </property>
            </view>
            <loader id="pulsesDl">
                <query>
                    <![CDATA[select e from helthdiary_Pulse e where e.patient = :patient order by e.date]]>
                </query>
            </loader>
        </collection>

        <collection id="temperaturesDc"
                    class="com.company.helthdiary.entity.patient.Temperature">
            <view extends="_local">
                <property name="patient" view="_minimal">
                    <property name="user" view="_minimal"/>
                </property>
            </view>
            <loader id="temperaturesDl">
                <query>
                    <![CDATA[select e from helthdiary_Temperature e where e.patient = :patient order by e.date]]>
                </query>
            </loader>
        </collection>

        <collection id="glucosesDc"
                    class="com.company.helthdiary.entity.patient.Glucose">
            <view extends="_local">
                <property name="patient" view="_minimal">
                    <property name="user" view="_minimal"/>
                </property>
            </view>
            <loader id="glucoseDl">
                <query>
                    <![CDATA[select e from helthdiary_Glucose e where e.patient = :patient order by e.date]]>
                </query>
            </loader>
        </collection>

        <collection id="pressuresDc"
                    class="com.company.helthdiary.entity.patient.Pressure">
            <view extends="_local">
                <property name="patient" view="_minimal">
                    <property name="user" view="_minimal"/>
                </property>
            </view>
            <loader id="pressuresDl">
                <query>
                    <![CDATA[select e from helthdiary_Pressure e where e.patient = :patient order by e.date]]>
                </query>
            </loader>
        </collection>
    </data>

    <layout spacing="true" margin="true">
        <hbox spacing="true">
            <vbox  stylename="well">
                <label icon="font-icon:HEARTBEAT"
                       stylename="font-style"
                       value="Pulse"
                       align="TOP_CENTER" />
                <chart:serialChart id="pulseSerialChart"
                                   autoMarginOffset="20"
                                   marginLeft="40"
                                   marginRight="40"
                                   categoryField="date"
                                   dataContainer="pulsesDc"
                                   plotAreaBorderAlpha="0"
                                   theme="LIGHT"
                                   addClassNames="true"
                                   plotAreaFillAlphas="0.1"
                                   responsive="true"
                                   startDuration="3">
                    <chart:legend equalWidths="false"
                                  position="TOP"
                                  valueAlign="LEFT"
                                  valueWidth="100"/>
                    <chart:graphs>
                        <chart:graph fillAlphas="0.6"
                                     balloonText="[[rate]]"
                                     colorField="color"
                                     type="COLUMN"
                                     lineAlpha="0.4"
                                     title="Rate"
                                     valueField="rate"/>
                    </chart:graphs>
                    <chart:categoryAxis axisColor="#FBCEB1"
                                        gridAlpha="0.07"
                                        startOnAxis="true">
                    </chart:categoryAxis>
                    <chart:export/>
                </chart:serialChart>
            </vbox>

            <label width="50px"/>

            <vbox stylename="well" spacing="true">
                <label icon="font-icon:TINT" value="Glucose" stylename="font-style" align="TOP_CENTER"/>
                <chart:serialChart id="Glucose"
                                   autoMarginOffset="20"
                                   marginLeft="40"
                                   marginRight="40"
                                   categoryField="date"
                                   dataContainer="glucosesDc"
                                   plotAreaBorderAlpha="0"
                                   addClassNames="true"
                                   plotAreaFillAlphas="0.1"
                                   responsive="true"
                                   startDuration="3"
                                   theme="LIGHT">
                    <chart:legend equalWidths="false"
                                  position="TOP"
                                  valueAlign="LEFT"
                                  valueWidth="100"/>

                    <chart:categoryAxis gridPosition="START"/>
                    <chart:graphs>
                        <chart:graph fillAlphas="0.57"
                                     lineAlpha="0.4"
                                     title="Level"
                                     type="COLUMN"
                                     valueField="level"
                        />
                    </chart:graphs>
                    <chart:export/>
                </chart:serialChart>
            </vbox>
            <vbox>
                <vbox height="150" htmlSanitizerEnabled="false" align="TOP_RIGHT" spacing="true" margin="true" stylename="card">
                    <label icon="font-icon:FILTER" stylename="font-style-1" value="InputDate"/>
                    <dateField id="startDate" property="input Date"/>
                    <dateField id="endDate" property="input Date"/>
                    <button id="filterBtn" caption="Show"/>
                </vbox>
                <label height="50px"/>
                <vbox height="100" htmlSanitizerEnabled="false" align="TOP_RIGHT" spacing="true" margin="true" stylename="card">
                    <hbox><label icon="CIRCLE" stylename="my-color1"/>
                        <label value="msg://Indicator above the norm//"/> </hbox>
                    <hbox><label icon="CIRCLE" stylename="my-color2"/>
                        <label value="lowIndicator"/>
                    </hbox>
                </vbox>
            </vbox>
        </hbox>

        <label height="5px"/>

        <hbox spacing="true" >

            <vbox stylename="well" spacing="true">
                <label icon="font-icon:THERMOMETER_2" stylename="font-style" value="Temperature" align="TOP_CENTER" />
                <chart:serialChart id="lineChart2"
                                   autoMarginOffset="20"
                                   marginLeft="40"
                                   marginRight="40"
                                   categoryField="date"
                                   startDuration="1"
                                   dataContainer="temperaturesDc"
                                   theme="LIGHT">
                    <chart:valueAxes>
                        <chart:axis id="v11"
                                    axisAlpha="0"
                                    ignoreAxisWidth="true"
                                    position="LEFT"/>
                    </chart:valueAxes>
                    <chart:balloon borderThickness="1"
                                   shadowAlpha="0"/>
                    <chart:graphs>
                        <chart:graph id="g11"
                                     balloonText="&lt;span style=&apos;font-size:18px;&apos;&gt;[[value]]&lt;/span&gt;"
                                     bullet="ROUND"
                                     bulletBorderAlpha="1"
                                     bulletColor="WHITE"
                                     bulletSize="5"
                                     hideBulletsCount="50"
                                     lineThickness="2"
                                     title="measure"
                                     useLineColorForBulletBorder="true"
                                     valueAxis="v1"
                                     valueField="measure">
                            <chart:balloon adjustBorderColor="false"
                                           color="WHITE"
                                           drop="true"/>
                        </chart:graph>

                    </chart:graphs>
                    <chart:legend useGraphSettings="true"/>
                    <chart:categoryAxis dashLength="1"
                                        minorGridEnabled="true"/>
                    <chart:chartCursor cursorAlpha="1"
                                       cursorColor="#258cbb"
                                       cursorPosition="MOUSE"
                                       limitToGraph="g1"
                                       pan="true"
                                       valueLineAlpha="0.2"
                                       valueZoomable="true"/>
                    <chart:export/>
                </chart:serialChart>
            </vbox>

            <label width="50px"/>

            <vbox stylename="well" spacing="true" width="100%">

                <label icon="font-icon:TACHOMETER" value="Pressure" align="TOP_CENTER" stylename="font-style"/>
                <chart:serialChart id="lineChart"
                                   categoryField="date"
                                   dataContainer="pressuresDc"
                                   marginLeft="50"
                                   startDuration="1"
                                   theme="LIGHT">
                    <chart:valueAxes>
                        <chart:axis id="v1"
                                    axisAlpha="0"
                                    ignoreAxisWidth="true"
                                    position="LEFT"/>
                    </chart:valueAxes>
                    <chart:balloon borderThickness="1"
                                   shadowAlpha="0"/>
                    <chart:graphs>
                        <chart:graph id="g1"
                                     balloonText="&lt;span style=&apos;font-size:18px;&apos;&gt;[[value]]&lt;/span&gt;"
                                     bullet="ROUND"
                                     bulletBorderAlpha="1"
                                     bulletColor="WHITE"
                                     bulletSize="5"
                                     hideBulletsCount="50"
                                     lineThickness="2"
                                     title="upperBp"
                                     useLineColorForBulletBorder="true"
                                     valueAxis="v1"
                                     valueField="upperBp">
                            <chart:balloon adjustBorderColor="false"
                                           color="WHITE"
                                           drop="true"/>
                        </chart:graph>
                        <chart:graph id="g2"
                                     balloonText="&lt;span style=&apos;font-size:18px;&apos;&gt;[[value]]&lt;/span&gt;"
                                     bullet="ROUND"
                                     bulletBorderAlpha="1"
                                     bulletColor="WHITE"
                                     bulletSize="5"
                                     hideBulletsCount="50"
                                     lineColor="LIGHTGREEN"
                                     lineThickness="2"
                                     title="lowerBp"
                                     useLineColorForBulletBorder="true"
                                     valueAxis="v2"
                                     valueField="lowerBp">
                            <chart:balloon adjustBorderColor="false"
                                           color="WHITE"
                                           drop="true"/>
                        </chart:graph>
                    </chart:graphs>
                    <chart:legend useGraphSettings="true"/>
                    <chart:categoryAxis dashLength="1"
                                        minorGridEnabled="true"/>
                    <chart:chartCursor cursorAlpha="1"
                                       cursorColor="#258cbb"
                                       cursorPosition="MOUSE"
                                       limitToGraph="g1"
                                       pan="true"
                                       valueLineAlpha="0.2"
                                       valueZoomable="true"/>
                    <chart:export/>
                </chart:serialChart>
            </vbox>
        </hbox>
    </layout>
</window>