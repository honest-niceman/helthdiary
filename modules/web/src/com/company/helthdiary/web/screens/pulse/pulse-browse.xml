<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://pulseBrowse.caption"
        focusComponent="pulsesTable"
        messagesPack="com.company.helthdiary.web.screens.pulse">
    <data readOnly="true">
        <collection id="pulsesDc"
                    class="com.company.helthdiary.entity.Pulse">
            <view extends="_local"/>
            <loader id="pulsesDl">
                <query>
                    <![CDATA[select e from helthdiary_Pulse e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.user = :user</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="pulsesTable"
            spacing="true">
        <filter id="filter"
                applyTo="pulsesTable"
                dataLoader="pulsesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="pulsesTable"
                    width="100%"
                    dataContainer="pulsesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="rate" caption="Rate"/>
                <column id="date" caption="Date"/>
                <column id="description" caption="Description"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="pulsesTable.create"/>
                <button id="editBtn" action="pulsesTable.edit"/>
                <button id="removeBtn" action="pulsesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
