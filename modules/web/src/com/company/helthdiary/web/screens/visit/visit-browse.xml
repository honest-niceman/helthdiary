<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://visitBrowse.caption"
        focusComponent="visitsTable"
        messagesPack="com.company.helthdiary.web.screens.visit">
    <data readOnly="true">
        <collection id="visitsDc"
                    class="com.company.helthdiary.entity.Visit">
            <view extends="_local">
                <property name="doctor" view="_minimal">
                    <property name="lastname"/>
                </property>
            </view>
            <loader id="visitsDl">
                <query>
                    <![CDATA[select e from helthdiary_Visit e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.patient.user = :patient.user</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="visitsTables"
            spacing="true">
        <filter id="filter"
                applyTo="visitsTable"
                dataLoader="visitsDl">
            <properties include=".*"/>
        </filter>
        <tabSheet id="visitsTables">
            <tab id="caledarTab" caption="Tab" margin="true,false,false,false" spacing="true" expand="calendar">
                <calendar id="calendar" dataContainer="visitsDc" endDateProperty="end" startDateProperty="start"/>
            </tab>
            <tab id="tableTab" caption="msg://tableTab.caption" expand="visitsTable">
                <groupTable id="visitsTable"
                                    width="100%"
                                    dataContainer="visitsDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="doctor"/>
                        <column id="start"/>
                        <column id="end"/>
                        <column id="type"/>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="visitsTable.create"/>
                        <button id="editBtn" action="visitsTable.edit"/>
                        <button id="removeBtn" action="visitsTable.remove"/>
                    </buttonsPanel>
                </groupTable>
            </tab>
        </tabSheet>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
