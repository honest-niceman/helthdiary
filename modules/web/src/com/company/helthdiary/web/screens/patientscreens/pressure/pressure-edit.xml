<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="mainMsg://pressureEdit"
        focusComponent="form"
        messagesPack="com.company.helthdiary.web">
    <data>
        <instance id="pressureDc"
                  class="com.company.helthdiary.entity.patient.Pressure">
            <view extends="_local">
                <property name="patient" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="pressureDc">
            <column width="350px">
                <textField id="upperBpField" property="upperBp" required="true"/>
                <textField id="lowerBpField" property="lowerBp" required="true"/>
                <textArea id="descriptionField" property="description"/>
                <dateField id="dateField" property="date" required="true"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
