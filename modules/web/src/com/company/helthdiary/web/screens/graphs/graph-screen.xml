<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://graphScreen.caption"
        messagesPack="com.company.helthdiary.web.screens.graphs"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd">
    <data readOnly="true">
        <collection id="pulsesDc"
                    class="com.company.helthdiary.entity.Pulse">
            <view extends="_local"/>
            <loader id="pulsesDl">
                <query>
                    <![CDATA[select e from helthdiary_Pulse e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.user = :user</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>

        <collection id="glucosesDc"
                    class="com.company.helthdiary.entity.Glucose">
            <view extends="_local"/>
            <loader id="glucoseDl">
                <query>
                    <![CDATA[select e from helthdiary_Glucose e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.user = :user</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
        <collection id="pressuresDc"
                    class="com.company.helthdiary.entity.Pressure">
        <view extends="_local"/>
        <loader id="pressuresDl">
            <query>
                <![CDATA[select e from helthdiary_Pressure e]]>
                <condition>
                    <and>
                        <c:jpql>
                            <c:where>e.user = :user</c:where>
                        </c:jpql>
                    </and>
                </condition>
            </query>
        </loader>
    </collection>
    </data>

    <layout>
        <hbox>
            <vbox>
                <label value="msg://Pulse" align="TOP_CENTER"/>
                <chart:serialChart id="Pulse"
                                   categoryField="date"
                                   dataContainer="pulsesDc"
                                   plotAreaBorderAlpha="0"
                                   theme="LIGHT"
                                   addClassNames="true"
                                   plotAreaFillAlphas="0.1"
                                   responsive="true"
                                   startDuration="1">
                    <chart:legend equalWidths="false"
                                  position="TOP"
                                  valueAlign="LEFT"
                                  valueWidth="100"/>
                    <chart:graphs>
                        <chart:graph fillAlphas="0.6"
                                     type="COLUMN"
                                     lineAlpha="0.4"
                                     title="Rate"
                                     valueField="rate"/>
                    </chart:graphs>
                    <chart:categoryAxis axisColor="#FBCEB1"
                                        gridAlpha="0.07"
                                        startOnAxis="true">
                    </chart:categoryAxis>
                    <chart:export/>
                </chart:serialChart>
            </vbox>


            <vbox>
            <label value="msg://Glucose" align="TOP_CENTER"/>
            <chart:serialChart id="Glucose"
                               categoryField="date"
                               dataContainer="glucosesDc"
                               marginLeft="0"
                               marginTop="0"
                               plotAreaBorderAlpha="0"

                               addClassNames="true"

                               plotAreaFillAlphas="0.1"
                               responsive="true"
                               startDuration="1"

                               theme="LIGHT">


                <chart:legend equalWidths="false"
                              position="TOP"
                              valueAlign="LEFT"
                              valueWidth="100"/>

                <chart:categoryAxis gridPosition="START"/>
                <chart:graphs>
                    <chart:graph fillAlphas="0.57"
                                 lineAlpha="0.4"
                                 title="Level"
                                 type="COLUMN"
                                 valueField="level"
                    />
                </chart:graphs>
                <chart:export/>
            </chart:serialChart>
            </vbox>

        </hbox>

    <hbox >
        <vbox >
            <label value="msg://" align="TOP_CENTER" height="100%"/>
            <label value="msg://" align="TOP_CENTER" height="100%"/>
            <label value="msg://" align="TOP_CENTER" height="100%"/>
            <label value="msg://Pressure" align="TOP_CENTER" />
        <chart:serialChart id="lineChart"
                           autoMarginOffset="20"
                           categoryField="date"
                           dataContainer="pressuresDc"
                           marginLeft="40"
                           marginRight="40"

                           theme="LIGHT">
            <chart:valueAxes>
                <chart:axis id="v1"
                            axisAlpha="0"
                            ignoreAxisWidth="true"
                            position="LEFT"/>
            </chart:valueAxes>
            <chart:balloon borderThickness="1"
                           shadowAlpha="0"/>
            <chart:graphs>
                <chart:graph id="g1"
                             balloonText="&lt;span style=&apos;font-size:18px;&apos;&gt;[[value]]&lt;/span&gt;"
                             bullet="ROUND"
                             bulletBorderAlpha="1"
                             bulletColor="WHITE"
                             bulletSize="5"
                             hideBulletsCount="50"
                             lineThickness="2"
                             title="upperBp"
                             useLineColorForBulletBorder="true"
                             valueAxis="v1"
                             valueField="upperBp">
                    <chart:balloon adjustBorderColor="false"
                                   color="WHITE"
                                   drop="true"/>
                </chart:graph>
                <chart:graph id="g2"
                             balloonText="&lt;span style=&apos;font-size:18px;&apos;&gt;[[value]]&lt;/span&gt;"
                             bullet="ROUND"
                             bulletBorderAlpha="1"
                             bulletColor="WHITE"
                             bulletSize="5"
                             hideBulletsCount="50"
                             lineThickness="2"
                             title="lowerBp"
                             useLineColorForBulletBorder="true"
                             valueAxis="v2"
                             valueField="lowerBp">
                    <chart:balloon adjustBorderColor="false"
                                   color="WHITE"
                                   drop="true"/>
                </chart:graph>
            </chart:graphs>
            <chart:legend useGraphSettings="true"/>
            <chart:categoryAxis dashLength="1"
                                minorGridEnabled="true"/>
            <chart:chartCursor cursorAlpha="1"
                               cursorColor="#258cbb"
                               cursorPosition="MOUSE"
                               limitToGraph="g1"
                               pan="true"
                               valueLineAlpha="0.2"
                               valueZoomable="true"/>
            <chart:export/>
        </chart:serialChart>
        </vbox>
    </hbox>
    </layout>
</window>