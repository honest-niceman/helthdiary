<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://pressureEdit.caption"
        focusComponent="form"
        messagesPack="com.company.helthdiary.web.screens.pressure">
    <data>
        <instance id="pressureDc"
                  class="com.company.helthdiary.entity.Pressure">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="pressureDc">
            <column width="350px">
                <textField id="upperBpField" property="upperBp"/>
                <textField id="lowerBpField" property="lowerBp"/>
                <textArea id="descriptionField" property="description" rows="5"/>
                <dateField id="dateField" property="date"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
