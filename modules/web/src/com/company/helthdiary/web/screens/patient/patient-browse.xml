<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://patientBrowse.caption"
        messagesPack="com.company.helthdiary.web.screens.patient">
    <data readOnly="true">
        <collection id="patientsDc"
                    class="com.company.helthdiary.entity.Patient">
            <view extends="_local">
                <property name="user" view="_minimal"/>
            </view>
            <loader id="patientsDl">
                <query>
                    <![CDATA[select e from helthdiary_Patient e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.user = :user</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true">
        <form width="AUTO" height="AUTO">
            <textField id="nameFirstField" caption="msg://First Name" editable="false"/>
            <textField id="nameLastField" caption="msg://Last Name" editable="false"/>
            <dateField id="dateOfBirthField" caption="msg://Date of birth" editable="false"/>
            <lookupField id="genderField" caption="msg://Gender" editable="false"/>
            <textField id="heightField" caption="msg://Height" editable="false"/>
            <textField id="weightField" caption="msg://Weight" editable="false"/>
            <textField id="calorieField" caption="msg://Calorie" editable="false"/>
            <buttonsPanel id="buttonsPanel" alwaysVisible="true" >
                <button id="editBtn" caption="msg://edit"/>
                <button id="createBtn" caption="msg://create"/>
            </buttonsPanel>
        </form>
    </layout>
</window>
