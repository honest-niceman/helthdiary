<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="mainMsg://visitEdit.caption"
        focusComponent="form"
        messagesPack="com.company.helthdiary.web">
    <data>
        <instance id="visitDc"
                  class="com.company.helthdiary.entity.visit.Visit">
            <view extends="_local">
                <property name="doctor" view="_minimal">
                    <property name="lastname"/>
                </property>
                <property name="patient" view="_minimal"/>
                <property name="doctorName"/>
                <property name="doctorType"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="visitDc">
            <column width="350px">
                <pickerField id="doctorField" property="doctor" required="true">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <dateField id="startField" property="start" required="true"/>
                <dateField id="endField" property="end" required="true"/>
                <lookupField id="typeField" property="type" required="true"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
