<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="mainMsg://aboutMe"
        focusComponent="form"
        messagesPack="com.company.helthdiary.web">
    <data>
        <instance id="patientDc"
                  class="com.company.helthdiary.entity.patient.Patient">
            <view extends="_local">
                <property name="user" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="AUTO"
                width="AUTO"
                forceDialog="true"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="patientDc">
            <column width="350px">
                <textField id="nameFirstField" property="nameFirst" required="true"/>
                <textField id="nameLastField" property="nameLast" required="true"/>
                <dateField id="dateOfBirthField" property="dateOfBirth" required="true"/>
                <lookupField id="genderField" nullOptionVisible="false" property="gender" required="true"/>
                <textField id="heightField" property="height" required="true"/>
                <textField id="weightField" property="weight" required="true"/>
                <textField id="calorieField" editable="false" property="calorie"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
