<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://visitEdit.caption"
        focusComponent="form"
        messagesPack="com.company.helthdiary.web.screens.visit">
    <data>
        <instance id="visitDc"
                  class="com.company.helthdiary.entity.Visit">
            <view extends="_local">
                <property name="doctor" view="_minimal">
                    <property name="lastname"/>
                </property>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="visitDc">
            <column width="350px">
                <pickerField id="doctorField" property="doctor">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <dateField id="startField" property="start"/>
                <dateField id="endField" property="end"/>
                <lookupField id="typeField" property="type"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
