<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://pressureBrowse.caption"
        focusComponent="pressuresTable"
        messagesPack="com.company.helthdiary.web.screens.pressure">
    <data readOnly="true">
        <collection id="pressuresDc"
                    class="com.company.helthdiary.entity.Pressure">
            <view extends="_local"/>
            <loader id="pressuresDl">
                <query>
                    <![CDATA[select e from helthdiary_Pressure e]]>
                    <condition>
                        <and>
                            <c:jpql>
                                <c:where>e.user = :user</c:where>
                            </c:jpql>
                        </and>
                    </condition>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="pressuresTable"
            spacing="true">
        <filter id="filter"
                applyTo="pressuresTable"
                dataLoader="pressuresDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="pressuresTable"
                    width="100%"
                    dataContainer="pressuresDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="upperBp"/>
                <column id="lowerBp"/>
                <column id="description"/>
                <column id="date"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="pressuresTable.create" stylename="friendly"/>
                <button id="editBtn" action="pressuresTable.edit"/>
                <button id="removeBtn" action="pressuresTable.remove" stylename="danger"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
