<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://temperatureEdit.caption"
        focusComponent="form"
        messagesPack="com.company.helthdiary.web.screens.temperature">
    <data>
        <instance id="temperatureDc"
                  class="com.company.helthdiary.entity.Temperature">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="temperatureDc">
            <column width="350px">
                <textField id="measureField" property="measure"/>
                <dateField id="dateField" property="date"/>
                <textField id="descriptionField" property="description"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
