<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="mainMsg://glucose"
        focusComponent="glucosesTable"
        messagesPack="com.company.helthdiary.web">
    <data readOnly="true">
        <collection id="glucoseDc"
                    class="com.company.helthdiary.entity.patient.Glucose">
            <view extends="_local">
                <property name="patient" view="_minimal"/>
            </view>
            <loader id="glucoseDl">
                <query>
                    <![CDATA[select e from helthdiary_Glucose e where e.patient = :patient]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="glucosesTable"
            spacing="true">
        <textArea id="textArea"/>
        <filter id="filter"
                applyTo="glucosesTable"
                dataLoader="glucoseDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="glucosesTable"
                    width="100%"
                    dataContainer="glucoseDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="level"/>
                <column id="beforeFood"/>
                <column id="description"/>
                <column id="date"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="glucosesTable.create"/>
                <button id="editBtn" action="glucosesTable.edit"/>
                <button id="removeBtn" action="glucosesTable.remove"/>
                <button id="btn" caption="Generate"/>
                <button id="showScript" caption="Show script"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
