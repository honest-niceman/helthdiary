<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="mainMsg://restorePassword"
        focusComponent="loginField">

    <dialogMode width="AUTO"/>

    <layout spacing="true">
        <label id="warningLabel"
               icon="font-icon:WARNING"
               visible="false"
               value="msg://noSuchUserLabel"/>

        <textField id="loginField"
                   width="300px"
                   caption="msg://loginFieldCaption"
                   required="true"
                   requiredMessage="msg://textFieldRequiredMsg"/>

        <hbox align="MIDDLE_CENTER"
              colspan="2"
              spacing="true">
            <button id="okBtn"
                    align="TOP_RIGHT"
                    caption="msg://sendNewPasswordBtn"/>
            <button id="cancelBtn"
                    caption="msg://cancel"/>
        </hbox>
    </layout>
</window>