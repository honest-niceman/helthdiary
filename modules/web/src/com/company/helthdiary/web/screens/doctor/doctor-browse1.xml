<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://doctorBrowse1.caption"
        focusComponent="doctorsTable"
        messagesPack="com.company.helthdiary.web.screens.doctor">
    <data readOnly="true">
        <collection id="doctorsDc"
                    class="com.company.helthdiary.entity.Doctor">
            <view extends="_local"/>
            <loader id="doctorsDl">
                <query>
                    <![CDATA[select e from helthdiary_Doctor e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="doctorsTable"
            spacing="true">
        <filter id="filter"
                applyTo="doctorsTable"
                dataLoader="doctorsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="doctorsTable"
                    width="100%"
                    dataContainer="doctorsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="firstname"/>
                <column id="lastname"/>
                <column id="speciality"/>
                <column id="education"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
